<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>courseList</servlet-name>
    <servlet-class>edu.clarkson.autograder.server.CoursesServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>courseList</servlet-name>
    <url-pattern>/autograder/courses</url-pattern>
  </servlet-mapping>
  
  <servlet>
      <servlet-name>assignmentList</servlet-name>
      <servlet-class>edu.clarkson.autograder.server.AssignmentServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
      <servlet-name>assignmentList</servlet-name>
      <url-pattern>/autograder/assignment</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>